<!DOCTYPE html>
<html>
  <head>
    <title>IMAGETRENDS - Set the Trend!</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "https://use.fontawesome.com/454b36f219.js" %>
    <%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="apple-touch-icon" sizes="152x152" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">    
  </head>

  <body>

    <!-- Navigation -->
    <%= render 'application_partials/navigation' %>

    <div class="container">

      <!-- Flash Alerts -->
      <%= render 'application_partials/flash' %>

      <!-- Upload Modal -->
      <%= render 'application_partials/menu' %>

      <!-- Search -->
      <% if false %>
        <%= render 'application_partials/search' %>
       <% end %>

      <hr/>

      <!-- Content  -->
      <%= yield %>

    </div>

    <!-- Upload Modal -->
    <%= render 'application_partials/upload' %>

    <!-- Footer -->
    <%= render 'application_partials/footer' %>
  
  </body>
</html>
