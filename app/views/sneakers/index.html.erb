<a href="javascript:" id="return-to-top"><i class="fa fa-chevron-up"></i></a>
<% if @sneakers.count == 0 %>
  <div class="card text-white bg-danger">
    <div class="card-body">
      <p class="card-text">Nobody bothered to add any images, you better fix this before you launch your site!</p>
    </div>
  </div>
<% else %>
  <div class="row text-center text-lg-left" id='sneakers'>
    <%= render @sneakers %>
  </div>

  <%= will_paginate @sneakers %>
<% end %>
